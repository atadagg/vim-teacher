<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color"
            android:elevation="4dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vim Cheat Sheet"
                android:textSize="32sp"
                android:textColor="@color/text_color"
                android:layout_gravity="center"
                android:fontFamily="@font/munro"/>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- MOVEMENT COMMANDS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movement Commands"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:padding="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="h – Move cursor left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="j – Move cursor down"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="k – Move cursor up"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="l – Move cursor right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="0 – Move to start of line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="$ – Move to end of line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="b – Move to start of word"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="w – Move to start of next word"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="e – Move to end of word"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="gg – Go to first line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="G – Go to last line"/>

                <!-- EDITING COMMANDS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editing Commands"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="i – Insert mode before cursor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="I – Insert at start of line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="a – Append after cursor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="A – Append at end of line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="o – Open new line below"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="O – Open new line above"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="x – Delete character"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="dd – Delete entire line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="yy – Yank (copy) line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="p – Paste after cursor"/>

                <!-- MODES -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vim Modes"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="ESC – Normal mode"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="i – Insert mode"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="v – Visual mode"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text=":q – Quit"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text=":w – Save"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text=":wq – Save and Quit"/>

                <!-- ADVANCED COMMANDS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced Commands"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="u – Undo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text="Ctrl+r – Redo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/munro"
                    android:textColor="@color/text_color"
                    android:text=". – Repeat last command"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>